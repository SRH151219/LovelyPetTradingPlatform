/* 控制container的大小 */

#container {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 100rpx;
}

/* 设置地图的大小 */

#map {
  width: 100%;
  height: 100%;
}

/* 底部导航 */

.tab {
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
}

.tab view {
  text-align: center;
  line-height: 100rpx;
  width: 100%;
}

.tab view:nth-of-type(1) {
  background: #03bbd5;
}

.tab view:nth-of-type(2) {
  background: #ff9700;
}
